{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscription_id": {
            "type": "string",
            "defaultValue": "28c81cb8-de9f-402c-b56d-d3c323c79c6c"
        },
        "storageaccount_name": {
            "type": "string",
            "defaultValue": "sbmsp1234567cmpstorage"
        },
        "namespaces_name": {
            "defaultValue": "sbmsp1234567-cmp-eventhubnamespace",
            "type": "string"
        }
    },
    "variables": {
        "storageaccount_id": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageaccount_name'))]",
        "eventhub_sas_key_id": "[resourceId('Microsoft.EventHub/namespaces/authorizationRules', parameters('namespaces_name'), 'sb-cmp-eventhub-key')]"

    },
    "resources": [
        {
            "apiVersion": "2019-04-01",
            "name": "[parameters('storageaccount_name')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "japaneast",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        },
        {
            "apiVersion": "2019-04-01",
            "name": "[concat(parameters('storageaccount_name'), '/default')]",
            "type": "Microsoft.Storage/storageAccounts/blobServices",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageaccount_name'))]"
            ],
            "properties": {
                "cors": {
                    "corsRules": []
                },
                "deleteRetentionPolicy": {
                    "enabled": false
                }
            }
        },
        {
            "apiVersion": "2019-04-01",
            "name": "[concat(parameters('storageaccount_name'), '/default/sb-cmp-storagecontainer')]",
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/blobServices', parameters('storageaccount_name'), 'default')]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageaccount_name'))]"
            ],
            "properties": {
                "publicAccess": "None"
            }
        },
        {
            "apiVersion": "2018-01-01-preview",
            "name": "[parameters('namespaces_name')]",
            "type": "Microsoft.EventHub/namespaces",
            "location": "japaneast",
            "sku": {
                "name": "Basic",
                "tier": "Basic",
                "capacity": 1
            },
            "properties": {
                "zoneRedundant": false,
                "isAutoInflateEnabled": false,
                "maximumThroughputUnits": 0,
                "kafkaEnabled": false
            },
            "resources": [
                {
                    "apiVersion": "2017-04-01",
                    "name": "sb-cmp-eventhub",
                    "type": "eventhubs",
                    "dependsOn": [
                        "[concat('Microsoft.EventHub/namespaces/', parameters('namespaces_name'))]"
                    ],
                    "properties": {
                        "messageRetentionInDays": 1,
                        "partitionCount": 2,
                        "status": "Active"
                    }
                },
                {
                    "apiVersion": "2017-04-01",
                    "name": "sb-cmp-eventhub-key",
                    "type": "AuthorizationRules",
                    "dependsOn": [
                        "[concat('Microsoft.EventHub/namespaces/', parameters('namespaces_name'))]"
                    ],
                    "properties": {
                        "rights": ["Send", "Listen", "Manage"]
                    }
                }
            ]
        }    
    ],
    "outputs": {
        "eventhub_sas_key": {
        "type": "string",
        "value": "[listkeys(variables('eventhub_sas_key_id'), '2017-04-01').primaryKey]"
        },
        "storage_connection_strings": {
        "type": "string",
        "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageaccount_name'),';AccountKey=',listKeys(variables('storageaccount_id'), '2019-04-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
        }
    }
}
